{% include '_header.twig' %}

<!-- Main Page Content and Sidebar -->

    <!-- Main Blog Content -->
    <div class="large-8 columns" role="content">

        <article>

            <h2>{{ record.title }}</h2>

            {% if record.subtitle %}
                <h3>{{ record.subtitle }}</h3>
            {% endif %}

            {{ record.body }}

        </article>

        <article>{{ record.templatefields.section_1 }}</article>
        <article>{{ record.templatefields.section_2 }}</article>
        <article>
            <a href="{{ image(record.templatefields.image) }}">
                <img src="{{ thumbnail(record.templatefields.image, 640, 480) }}">
            </a>
        </article>


    </div>

    <!-- End Main Content -->

    {% include '_aside.twig' %}

    <!-- End Main Content and Sidebar -->



